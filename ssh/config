# SSH Configuration Template
# Copy this file to ~/.ssh/config and customize with your hosts
# Each service should have its own dedicated SSH key

# Default settings for all hosts (fallback)
Host *
    AddKeysToAgent yes
    IgnoreUnknown UseKeychain
    UseKeychain yes

# GitHub (ochairo Account)
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/github/ochairo/id_ed25519
    IdentitiesOnly yes

# GitHub (Work Account)
Host github-work
    HostName github.com
    User git
    IdentityFile ~/.ssh/github/work/id_ed25519
    IdentitiesOnly yes

# GitLab (Work Account)
Host gitlab.com
    HostName gitlab.com
    User git
    IdentityFile ~/.ssh/gitlab/work/id_ed25519
    IdentitiesOnly yes

# DevOps / Infrastructure (Work)
Host devops-server
    HostName devops.example.com
    User devops
    IdentityFile ~/.ssh/devops/work/id_ed25519
    IdentitiesOnly yes
    Port 22

