[user]
	name = Your Name
	email = your.email@example.com

[core]
	editor = nvim
	autocrlf = input
	excludesfile = ~/.gitignore_global
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	light = false
	line-numbers = true
	side-by-side = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	default = current
	autoSetupRemote = true

[fetch]
	prune = true

[rebase]
	autoStash = true

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = cyan

[alias]
	# Short status
	s = status -sb

	# Pretty log
	l = log --pretty=format:'%C(yellow)%h%C(reset) - %C(cyan)%an%C(reset) %C(green)(%ar)%C(reset)%C(auto)%d%C(reset)%n  %s' --graph
	ll = log --oneline --graph --decorate --all

	# Amend
	amend = commit --amend --no-edit

	# Undo last commit
	undo = reset HEAD~1 --mixed

	# Clean up merged branches
	cleanup = "!git branch --merged | grep -v '\\*\\|main\\|master\\|develop' | xargs -n 1 git branch -d"

	# Show branches
	br = branch -vv

	# Interactive rebase
	rb = rebase -i

	# Stash with message
	stash-msg = stash save

	# Show what's ignored
	ignored = ls-files --others -i --exclude-standard
